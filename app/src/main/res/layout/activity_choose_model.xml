<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="175dp"
        android:layout_height="195dp"
        android:layout_marginRight="1000dp"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="-70dp"
        android:textStyle="bold"
        app:srcCompat="@drawable/salad" />

    <LinearLayout
        android:layout_width="1000dp"
        android:layout_height="40dp"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="0dp"
        android:background="@drawable/textview_border1"
        android:orientation="vertical"
        android:padding="3dp">

        <Button
            android:id="@+id/btnMenu1"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="@drawable/ic_menu" />




    </LinearLayout>

    <Button
        android:id="@+id/btnAbout"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/ic_info1" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="60dp"
        android:text="@string/food_advisor"
        android:textColor="#000000"
        android:textSize="36sp"
        app:fontFamily="@font/david_libre" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="74dp"
        android:layout_height="78dp"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:contentDescription="@string/logo"
        app:srcCompat="@drawable/pag1" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="241dp"
        android:layout_height="64dp"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="150dp"
        android:text="Upload Photo"
        android:textColor="#000000"
        android:textSize="35sp"
        app:fontFamily="@font/david_libre" />

    <Button
        android:id="@+id/inception_float"
        android:layout_width="160dp"
        android:layout_height="41dp"
        android:layout_marginStart="95dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="450dp"
        android:background="#F28729"
        android:drawableLeft="@drawable/ic_camera"
        android:text="camera"/>




    <Button
        android:id="@+id/buttonChoose"
        android:layout_width="160dp"
        android:layout_height="41dp"
        android:layout_marginStart="95dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="505dp"
        android:background="#F28729"
        android:drawableLeft="@drawable/ic_crop"
        android:text="gallery"/>



    <ImageView
        android:id="@+id/selected_image"
        android:layout_width="223dp"
        android:layout_height="202dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="220dp"
        app:srcCompat="@drawable/food_imag" />


    <Button
        android:id="@+id/inception_quant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="262dp"
        android:text="Inception Quantized"
        android:visibility="invisible" />

    <Button
        android:id="@+id/move_to_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="424dp"
        android:text="Button"
        android:visibility="invisible" />





</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="175dp"
        android:layout_height="195dp"
        android:layout_marginRight="1000dp"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="-70dp"
        android:textStyle="bold"
        app:srcCompat="@drawable/salad" />

    <LinearLayout
        android:layout_width="1000dp"
        android:layout_height="40dp"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="0dp"
        android:background="@drawable/textview_border1"
        android:orientation="vertical"
        android:padding="3dp">

        <Button
            android:id="@+id/btnMenu1"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="@drawable/ic_menu" />




    </LinearLayout>

    <Button
        android:id="@+id/btnAbout"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="350dp"
        android:background="@drawable/ic_info1" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="60dp"
        android:text="@string/food_advisor"
        android:textColor="#000000"
        android:textSize="36sp"
        app:fontFamily="@font/david_libre" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="74dp"
        android:layout_height="78dp"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:contentDescription="@string/logo"
        app:srcCompat="@drawable/pag1" />

    <ImageView
        android:id="@+id/selected_image"
        android:layout_width="198dp"
        android:layout_height="208dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="120dp"
        app:srcCompat="@drawable/food1" />

    <Button
        android:id="@+id/classify_image"
        android:layout_width="160dp"
        android:layout_height="41dp"
        android:layout_marginStart="95dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="350dp"
        android:background="#F28729"
        android:drawableLeft="@drawable/ic_polymer_black_24dp"
        android:text="analyze" />


    <Button
        android:id="@+id/save_button"
        android:layout_width="160dp"
        android:layout_height="41dp"
        android:layout_marginStart="95dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="380dp"
        android:background="#F28729"
        android:drawableLeft="@drawable/ic_arrow_back"
        android:text="Save"
        android:visibility="invisible" />


    <LinearLayout
        android:id="@+id/labels"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/save_button"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"

        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="-3dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lableText"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:shadowColor="#FFFFFF"
                android:text="Label"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold"
                app:fontFamily="@font/david_libre" />

            <TextView
                android:id="@+id/ConfidenceText"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Confidence"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold"
                app:fontFamily="@font/david_libre" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/label1"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="1."
                android:textColor="#000000"
                android:textSize="24sp"
                app:fontFamily="@font/david_libre" />

            <TextView
                android:id="@+id/Confidence1"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=""
                android:textColor="#000000"
                android:textSize="24sp"
                app:fontFamily="@font/david_libre" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/label2"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="2."
                android:textColor="#000000"
                android:textSize="24sp"
                app:fontFamily="@font/david_libre" />

            <TextView
                android:id="@+id/Confidence2"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=""
                android:textColor="#000000"
                android:textSize="24sp"
                app:fontFamily="@font/david_libre" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/label3"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="3."
                android:textColor="#000000"
                android:textSize="24sp"
                app:fontFamily="@font/david_libre" />

            <TextView
                android:id="@+id/Confidence3"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=""
                android:textColor="#000000"
                android:textSize="24sp"
                app:fontFamily="@font/david_libre" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/labelMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="570dp"
        android:text=""
        android:textColor="#252222"
        android:textSize="18sp"
        app:fontFamily="@font/david_libre" />


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="175dp"
        android:layout_height="195dp"
        android:layout_marginRight="1000dp"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="-70dp"
        android:textStyle="bold"
        app:srcCompat="@drawable/salad" />

    <LinearLayout
        android:layout_width="1000dp"
        android:layout_height="40dp"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="0dp"
        android:background="@drawable/textview_border1"
        android:orientation="vertical"
        android:padding="3dp">

        <Button
            android:id="@+id/btnMenu1"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="@drawable/ic_menu" />




    </LinearLayout>
    <Button
        android:id="@+id/btnAbout"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/ic_info1" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="60dp"
        android:text="@string/food_advisor"
        android:textColor="#000000"
        android:textSize="36sp"
        app:fontFamily="@font/david_libre" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="74dp"
        android:layout_height="78dp"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:contentDescription="@string/logo"
        app:srcCompat="@drawable/pag1" />


    <TextView
        android:id="@+id/nameFoodTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:gravity="center|center_horizontal"
        android:text="name food"
        android:textColor="#000000"
        android:textSize="40sp"
        android:textStyle="bold"
        app:fontFamily="@font/david_libre" />

    <ImageView
        android:id="@+id/selected_image"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="110dp"
        app:srcCompat="@drawable/food1" />




    <TextView
        android:id="@+id/proteinTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="305dp"
        android:text="Protein : "
        android:textColor="#000000"
        android:textSize="25sp"
        app:fontFamily="@font/david_libre" />

    <TextView
        android:id="@+id/proteinTxt_space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="195dp"
        android:layout_marginTop="305dp"
        android:text=" 0.0"
        android:textColor="#000000"
        android:textSize="25sp"
        app:fontFamily="@font/david_libre" />


    <TextView
        android:id="@+id/EnergyTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="340dp"
        android:text="Energy : "
        android:textColor="#000000"
        android:textSize="25sp"
        app:fontFamily="@font/david_libre" />

    <TextView
        android:id="@+id/EnergyTxt_space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="195dp"
        android:layout_marginTop="340dp"
        android:text=" 0.0"
        android:textColor="#000000"
        android:textSize="25sp"
        app:fontFamily="@font/david_libre" />



    <TextView
        android:id="@+id/SugarsTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="375dp"
        android:text="Sugars : "
        android:textColor="#000000"
        android:textSize="25sp"
        app:fontFamily="@font/david_libre" />

    <TextView
        android:id="@+id/SugarsTxt_space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="195dp"
        android:layout_marginTop="375dp"
        android:text=" 0.0"
        android:textColor="#000000"
        android:textSize="25sp"
        app:fontFamily="@font/david_libre" />





    <TextView
        android:id="@+id/fatTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="410dp"
        android:text="Fat : "
        android:textColor="#000000"
        android:textSize="25sp"
        app:fontFamily="@font/david_libre" />

    <TextView
        android:id="@+id/fatTxt_space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="195dp"
        android:layout_marginTop="410dp"
        android:text=" 0.0"
        android:textColor="#000000"
        android:textSize="25sp"
        app:fontFamily="@font/david_libre" />



    <TextView
        android:id="@+id/CarbohydrateTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="445dp"
        android:text="Carb : "
        android:textColor="#000000"
        android:textSize="25sp"
        app:fontFamily="@font/david_libre" />

    <TextView
        android:id="@+id/CarbohydrateTxt_space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="195dp"
        android:layout_marginTop="445dp"
        android:text=" 0.0"
        android:textColor="#000000"
        android:textSize="25sp"
        app:fontFamily="@font/david_libre" />





    <Button
        android:id="@+id/btnSave"
        android:layout_width="160dp"
        android:layout_height="41dp"
        android:layout_marginStart="95dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="550dp"
        android:background="#F28729"
        android:drawableLeft="@drawable/ic_file_download"
        android:text="Download" />

    <Button
        android:id="@+id/btnSend"
        android:layout_width="160dp"
        android:layout_height="41dp"
        android:layout_marginStart="95dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="500dp"
        android:background="#F28729"
        android:drawableLeft="@drawable/ic_share"
        android:text="@string/send" />




</RelativeLayout>